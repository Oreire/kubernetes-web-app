pipeline {
    agent any

    environment {
        KUBECONFIG = "$HOME/.kube/config"  // Ensures Jenkins has access to the cluster
    }

    stages {
        stage('Checkout Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Oreire/kubernetes-web-app.git'
            }
        }

        // Optional: Uncomment if you want to build and push Docker images
        // stage('Build Custom Nginx Image') {
        //    steps {
        //        sh 'docker build -t my-nginx-app .'
        //        sh 'docker tag my-nginx-app localhost:5000/my-nginx-app'
        //        sh 'docker push localhost:5000/my-nginx-app' // Using local registry
        //    }
        // }

        stage('Apply Kubernetes Manifests') {
            steps {
                sh '''
                cd appdep
                kubectl apply -f deployment.yaml
                kubectl apply -f nginx-svc.yaml
                '''
            }
        }

        stage('Verify Deployment') {
            steps {
                sh '''
                kubectl get pods -o wide
                kubectl get svc -o wide
                kubectl describe deployment nginx-web
                '''
            }
        }
    }
}